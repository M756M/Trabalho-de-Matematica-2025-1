    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "rootDirs": ["./", "../module"],
        "composite": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "outDir": "../../../public/js",
        "declarationDir": "../../../public/lib",
        "tsBuildInfoFile": "../../../.private/core.tsbuildinfo"
