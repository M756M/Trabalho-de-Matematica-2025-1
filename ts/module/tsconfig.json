{
    "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/refs/heads/master/src/schemas/json/tsconfig.json",
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "composite": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "outDir": "../../../public/js",
        "declarationDir": "../../../public/lib",
        "tsBuildInfoFile": "../../../.private/module.tsbuildinfo"        
    },
    "include": ["./*.ts"]
}